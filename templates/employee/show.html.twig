{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}

    <img src="/assets/nl.jpg" width="100%" height="200" alt="retour">


    <div class="container">
        <style>
            body{
                background-color: #8fd19e;
            }
        </style>
    <h1 style="text-align: center; font-weight: bold; padding-top: 20px;">A Propos de {{ employee.nom }}</h1>

    <table class="table" style="width: 50%; text-align: center">
        <tbody>
            <tr>
                <th style="width: 3%">Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ employee.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ employee.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ employee.adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ employee.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ employee.dateDeNaissance ? employee.dateDeNaissance|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Code qr</th>
                <td>{{ employee.codeQr }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('employee_index') }}" class="btn btn-info">Retour</a><br>

    <a href="{{ path('employee_edit', {'id': employee.id}) }}" class="btn btn-warning">edit</a><br>
    {{ include('employee/_delete_form.html.twig') }}

    </div>
{% endblock %}
