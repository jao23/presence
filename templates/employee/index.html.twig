{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}


{% block body %}
    <img src="/assets/nl.jpg" width="100%" height="300" alt="retour">


    <h1 style="text-align: center; font-weight: bold; padding-top: 20px;">Liste des employees</h1>
    <style>
        body{
            background-color: #b3d7ff;
        }

    </style>
    <a href="{{ path('employee_new') }}"  class="btn btn-primary">Entrer nouveau employee</a>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>

                <th>Date_de_naissance</th>
                <th>Code_qr</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                <td style="width: 1%">{{ employee.id }}</td>
                <td>{{ employee.nom }}</td>
                <td>{{ employee.prenom }}</td>
                <td>{{ employee.adresse }}</td>

                <td style="width:1%">{{ employee.dateDeNaissance ? employee.dateDeNaissance|date('d-m-Y') : '' }}</td>
                <td style="width:0.5%">{{ employee.codeQr }}</td>
                <td>
                    <a href="{{ path('employee_show', {'id': employee.id}) }}" class="btn btn-success" >Voir</a>
                    <a href="{{ path('employee_edit', {'id': employee.id}) }}" class="btn btn-warning" >Editer</a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
